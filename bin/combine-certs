#!/bin/bash


if [[ $EUID -ne 0 ]]; then
   echo "This script must be run as root" 
   exit 1
fi

if [ ! -d /srv/certbot/ssl ]; then
	mkdir /srv/certbot/ssl
fi

cat /srv/certbot/etc/live/wiki.atvpc.com/fullchain.pem \
	 /srv/certbot/etc/live/wiki.atvpc.com/privkey.pem \
	 | sudo tee /srv/certbot/ssl/wiki.atvpc.com.pem
	
